<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Tasker.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textViewStyle">@style/Widget.Tasker.TextView</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Tasker.RaisedButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Tasker.BorderlessButton</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.Tasker.DialogTitle</item>
        <item name="android:textColorPrimary">#9E9E9E</item>
        <item name="dialogCornerRadius">5dp</item>


    </style>


    <style name="Widget.Tasker.TextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Tasker.DialogContent</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance.Tasker.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Tasker.DialogTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.Tasker.DialogContent" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#673AB7</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="Widget.Tasker.BorderlessButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#2196F3</item>
        <item name="android:capitalize">words</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.025</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:paddingLeft">25dp</item>
    </style>

    <style name="Widget.Tasker.RaisedButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">#2196F3</item>

    </style>

</resources>
